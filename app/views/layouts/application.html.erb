<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">MembersOnly</a>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
       
        <%= link_to  "Home", posts_path ,class:"nav-link" %>
     </li>
      </ul>
      
      <ul class="navbar-nav ml-auto">
        <%if !signed_in?%>
        <%= link_to  "Login", new_user_session_path ,class:"nav-item nav-link"%>
        <%= link_to  "Signup ", new_user_registration_path ,class:"nav-item nav-link"%>
  
     <%else%>

    <%= link_to  "Logout", destroy_user_session_path , method: :delete, data: {confimation: "are you sure?"}, class:"nav-item" %>
      
      <%end%>
    </ul>
    </div>
  </nav>
   <%if flash[:success]%>
    <div class='container'>
      <div class="notice"><%= notice %></p>
      <%elsif flash[:alert]%>
      <p class="alert"><%= alert %></p>
    </div>
    <%end%>

  <div class="container">  <%= yield %></div>

  </body>
</html>
